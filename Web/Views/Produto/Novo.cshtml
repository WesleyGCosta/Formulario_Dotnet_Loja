@model Web.Models.ProdutoViewModel

<form asp-for="Novo">
    <div class="card">
        <div class="card-header"><h1 class="text-center">Cadastrar produtos</h1></div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Descricao"></label>
                    <input type="text" asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Codigo"></label>
                    <input type="number" asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Preco"></label>
                    <input type="number" asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label asp-for="Categoria"></label>
                    <select asp-for="Categoria" class="form-control">
                        <option></option>
                        <option value="Infantil">Infantil</option>
                        <option value="Juvenil">Juvenil</option>
                        <option value="Adulto">Adulto</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="Observacao"></label>
                    <input type="text" asp-for="Observacao" class="form-control" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-4">
                    <a class="btn btn-secondary" asp-controller="Produto" asp-action="Index">Voltar</a>
                </div>
                <div class="col-4 text-center">
                    <input type="reset" value="Resetar" class="btn btn-secondary" />
                </div>
                <div class="col-4 text-right">
                    <input type="submit" value="Gravar" class="btn btn-secondary" />
                </div>
            </div>
        </div>
    </div>
</form>

<hr />


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
